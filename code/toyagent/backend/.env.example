# Backend Environment Variables for Local Development

# Application Settings
APP_NAME=toyagent-backend
APP_VERSION=0.1.0
DEBUG=true
APP_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=toyagent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Email Configuration (Exchange)
EMAIL_SERVER=your-exchange-server
EMAIL_ACCOUNT=your-email@domain.com
EMAIL_NAME=Your Name
EMAIL_PASSWORD=your-password

# Temporal Configuration
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Agent Configuration
AGENT_TIMEOUT=300  # seconds
AGENT_MAX_ITERATIONS=10
